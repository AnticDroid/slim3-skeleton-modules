{
    "name": "metroworks/sso",
    "description": "SSO authentication for apps sharing the same domain",
    "homepage": "http://accounts.japantravel.com",
    "minimum-stability": "dev",
    "prefer-stable": true,

    "repositories": [
        {
            "url": "https://github.com/martynbiz/slim3-module",
            "type": "git"
        },
        {
            "url": "https://github.com/martynbiz/php-mongo",
            "type": "git"
        },
        {
            "url": "https://github.com/martynbiz/plates",
            "type": "git"
        },
	    {
            "url": "https://github.com/martynbiz/php-translate-tool.git",
            "type": "git"
        }
    ],

    "require": {
        "php": ">=5.5.0",
        "slim/slim": "~3.0",
        "martynbiz/slim3-module": "dev-master",
        "martynbiz/slim3-controller": "dev-master",
        "martynbiz/php-mongo": "dev-master",
        "martynbiz/php-validator": "dev-master",
        "martynbiz/php-flash-message": "dev-master",
        "monolog/monolog": "^1.19",
        "facebook/php-sdk-v4": "^5.1",
        "zendframework/zend-i18n": "^2.6",
        "zendframework/zend-servicemanager": "^2.0",
        "zendframework/zend-mail": "^2.5",
        "zendframework/zend-cache": "^2.7",
        "desarrolla2/cache": "^2.1",
        "predis/predis": "^1.0",
        "foil/foil": "0.*",
        "slim/csrf": "^0.6.0",
        "aura/session": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "martynbiz/php-translate-tool": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "modules/Application/src/",
            "Auth\\": "modules/Auth/src/",
            "Blog\\": "modules/Blog/src/",

            "Hello\\": "modules/Hello/"
        }
    }
}
