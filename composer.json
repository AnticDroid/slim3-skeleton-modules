{
    "name": "metroworks/sso",
    "description": "SSO authentication for apps sharing the same domain",
    "homepage": "http://accounts.japantravel.com",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "~3.0",
        "martynbiz/slim3-module": "dev-master",
        "martynbiz/slim3-controller": "dev-master",
        "martynbiz/php-mongo": "dev-master",
        "martynbiz/php-validator": "^1.2",
        "league/plates": "^3.1",
        "monolog/monolog": "^1.17",
        "martynbiz/php-flash-message": "dev-master",
        "facebook/php-sdk-v4": "^5.1",
        "zendframework/zend-i18n": "^2.6",
        "zendframework/zend-servicemanager": "^2.0",
        "zendframework/zend-mail": "^2.5",
        "desarrolla2/cache": "^2.0",
        "predis/predis": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "modules/application/src/",
            "Auth\\": "modules/auth/src/",
            "Blog\\": "modules/blog/src/"
        },
        "classmap": [
            "tests"
        ]
    }
}
