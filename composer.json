{
    "name": "metroworks/sso",
    "description": "SSO authentication for apps sharing the same domain",
    "homepage": "http://accounts.japantravel.com",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "~3.0",
        "martynbiz/slim3-controller": "dev-master",
        "illuminate/database": "^5.2",
        "illuminate/events": "^5.2",
        "illuminate/view": "^5.2",
        "league/plates": "^3.1",
        "robmorgan/phinx": "^0.5.1",
        "monolog/monolog": "^1.17",
        "martynbiz/php-flash-message": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/library/",
            "App\\Modules\\Home\\": "app/modules/home/library/",
            "App\\Modules\\Auth\\": "app/modules/auth/library/"
        },
        "classmap": [
            "tests"
        ]
    }
}
