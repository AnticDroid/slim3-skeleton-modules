{
    "name": "metroworks/sso",
    "description": "SSO authentication for apps sharing the same domain",
    "homepage": "http://accounts.japantravel.com",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
	    {
            "url": "https://github.com/martynbiz/php-translate-tool.git",
            "type": "git"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "~3.0",
        "martynbiz/slim3-controller": "dev-master",
        "martynbiz/slim3-view": "dev-master",
        "illuminate/events": "^5.2",
        "illuminate/view": "^5.2",
        "robmorgan/phinx": "^0.5.1",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "config": {
        "vendor-dir": "../vendor"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/library/",
            "App\\Modules\\Home\\": "app/modules/home/library/",
            "App\\Modules\\Auth\\": "app/modules/auth/library/"
        },
        "classmap": [
            "tests"
        ]
    }
}
